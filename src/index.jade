doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    title YuriePlayer
    
    link(rel="stylesheet", media="screen", href="//fonts.googleapis.com/css?family=Open+Sans:300,400,700")
    
    if debug
      link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.css")
      link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css")
      link(rel="stylesheet", href="/css/bootstrap-theme.css")
      link(rel="stylesheet", href="/css/main.css")
    else
      link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
      link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
      link(rel="stylesheet", href="/css/bootstrap-theme.min.css")
      link(rel="stylesheet", href="/css/main.min.css")
  
  body(v-attr="class: bodyClassName")
    
    div.navbar.navbar-inverse.navbar-fixed-top.headroom
      div.container
        div.navbar-header
          a.navbar-brand(href="/")
            | Yurie Player
        
        div.navbar-collapse.collapse
          ul.nav.navbar-nav.pull-right
            li.active
              a(href="/") Home
            
            li
              a.btn(href="/ya/auth/twitter/login") SIGN IN / SIGN UP
    
    header.secondary
    
    div#signin
    
    div#player(v-component="player")
    

    footer
      div.container
        div.row
          div.col-md-6
          div.col-md-6
            p.text-right
              | Copyright (C) 2015 Pine Mizune. All Rights Reserviced.
          
    
    if debug
      script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.js")
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/dropbox.js/0.10.2/dropbox.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/headroom.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/jQuery.headroom.js")
      script(src="//js.live.net/v5.0/wl.debug.js")
      script(src="/js/main.js")
    else
      script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/dropbox.js/0.10.2/dropbox.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/headroom.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/jQuery.headroom.min.js")
      script(src="//js.live.net/v5.0/wl.js")
      script(src="/js/main.min.js")
    
    script(src="//apis.google.com/js/client.js?onload=handleClientLoad")